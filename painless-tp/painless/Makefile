all: 
	##################################################
	###                Glucose                     ###
	##################################################
	+ $(MAKE) -C glucose

	##################################################
	###                MapleCOMSPS                 ###
	##################################################
	+ $(MAKE) -C mapleCOMSPS

	##################################################
	###                PaInleSS                    ###
	##################################################
	+ $(MAKE) -C painless-src
	cd painless-src && mv painless ../painless

docs:
	rm -rf documents
	doxygen doxygen.config
	mkdir -p documents
	mv html latex documents

clean:
	##################################################
	###                Glucose                     ###
	##################################################
	+ $(MAKE) -C glucose clean

	##################################################
	###                MapleCOMSPS                 ###
	##################################################
	+ $(MAKE) -C mapleCOMSPS clean

	##################################################
	###                PaInleSS                    ###
	##################################################
	+ $(MAKE) clean -C painless-src
	rm -rf painless documents
